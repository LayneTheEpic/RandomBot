{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"declaration": true,

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		"lib": ["ESNext"],

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"rootDir": "./src/ts",
		"outDir": "./src/js",

		"moduleResolution": "node"
	},

	"include": ["./src/ts"]
}